{namespace help.template}

/** Used only to test seed project */
{template .Container}
<div class="{css help-container}" style="width:80%; height:150px;">
  <div class="{css help-container-inner}">
  </div>
  <div is class="{css help-button} {css help-button-close} {css core-tap}">
    {msg desc="button"}Close{/msg}
  </div>
</div>
{/template}

/** The help content should be printed via this template */
{template .Content}
  {@param main: list<string>}
  {@param items: list<list<string>>}
  <div class="{css help-content}">
    {call .Main}
      {param lines: $main /}
    {/call}
    {call .Items}
      {param items: $items /}
    {/call}
    {call .Spacer /}
  </div>
{/template}

/** The main (heading) help content should be print via this template */
{template .Main}
  {@param lines: list<string>}
  <div class="{css help-main}">
    {foreach $line in $lines}
      <div class="{css help-paragraph}">
        {$line}
      </div>
    {/foreach}
  </div>
{/template}

/** Template to use for all help items on a page. */
{template .Items}
  {@param items: list<list<string>>}
  <div class="{css help-items}">
    <h6>{msg desc="Help items separator label"}Help for specific items.{/msg}</h6>
    {foreach $item in $items}
      {call .Item}
        {param lines: $item /}
        {param index: index($item) /}
      {/call}
    {/foreach}
  </div>
{/template}

/** The template for a single help item */
{template .Item}
  {@param lines: list<string>}
  {@param index: int}
  <div class="{css help-item}" data-index="{$index}">
  {foreach $line in $lines}
    <div class="{css help-item-paragraph}">
      {if isFirst($line)}
        {call .ItemNumber}
          {param index: $index + 1 /}
        {/call}
      {/if}
      {$line}
    </div>
  {/foreach}
  </div>
{/template}

/** The template for numbering the items in the help */
{template .ItemNumber}
  {@param index: int}
  <div class="{css help-item-indicator}">
    <span>{$index}</span>
  </div>
{/template}

{template .Spacer}
  <div class="{css help-spacer}"></div>
{/template}

