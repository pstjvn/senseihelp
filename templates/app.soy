{template .IconContainer}
  <div is class="{css help-icon-container} {css core-tap}" style="width: 50px; height: 50px;">
    {call .HelpIcon}
      {param color: '#000000' /}
    {/call}
  </div>
{/template}

/** The introduction text */
{template .Introduction}
  <div style="padding: 10px; padding-left: 40px">
    <h4>{msg desc="heading text"}Welcome to the HELP CENTER!{/msg}</h4>
    <div>Click on a number on the page to see contextual help for the highlighed element.</div>
    <div>To active the help center again use the upper right corner menu and select help whenever you need more information on the page you see</div>
  </div>
{/template}

/** The void text */
{template .NotAvailable}
  <div style="padding: 10px; padding-left: 40px">
    <div>No help is available for this section yet.</div>
  </div>
{/template}

{template .MainWrapper}
  <div is class="{css help-main-wrapper}"></div>
{/template}
